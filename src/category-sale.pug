html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")

        title Category

        link(rel="preconnect" href="https://fonts.gstatic.com")
        link(href="https://fonts.googleapis.com/css2?family=Covered+By+Your+Grace&display=swap" rel="stylesheet")
        link(href='/css/style.css', rel='stylesheet')
        link(href='/css/category.css', rel='stylesheet')

    body
        script(src="/js/jquery.min.js")
        include component/mixin.pug
        include component/header/header.pug
        main.mt-3.mb-3
            section.content.container
                .content__inside
                    //- Banner Main 
                    +banner('Скидки на товары до 50%', '','','')(class="banner_sales")
                        .row
                            .col-6
                                +btn('#', 'Для женщин')(class="btn_inverse")
                            .col-6
                                +btn('#', 'Для мужчин')(class="btn_inverse")
                    //- Filter's block
                    .mt-1
                        include component/filters/filters.pug
                    p.content__category-title.text-center.mt-4.mb-2 Распродажа
                    .row
                        .col-3.mt-2
                            +product('Shaper Classic Peach', '6 999 руб.', '8 999 руб.', 'Sale', '', 'product.html')(style="background-image:url('/img/product-9.jpg');" styleHover="background-image:url('/img/product-6.jpg');")
                        .col-3.mt-2
                            +product('Shaper Bamboo', '2 459 руб.', '', '', 'ожидаем поступления на склад', 'product.html')(style="background-image:url('/img/product-7.jpg');" styleHover="background-image:url('/img/product-8.jpg');")
                        .col-3.mt-2
                            +product('Shaper Classic Peach', '6 999 руб.', '8 999 руб.', 'New+Promo', '', 'product.html')(style="background-image:url('/img/product-1.jpg');" styleHover="background-image:url('/img/product-6.jpg');")
                        .col-3.mt-2
                            +product('Shaper Bamboo', '2 459 руб.', '', '', '', 'product.html')(style="background-image:url('/img/product-2.jpg');" styleHover="background-image:url('/img/product-7.jpg');")
                        .col-3.mt-2
                            +product('Shaper Classic Peach', '6 999 руб.', '8 999 руб.', 'Sale', '', 'product.html')(style="background-image:url('/img/product-9.jpg');" styleHover="background-image:url('/img/product-6.jpg');")
                        .col-3.mt-2
                            +product('Shaper Bamboo', '2 459 руб.', '', '', '', 'product.html')(style="background-image:url('/img/product-7.jpg');" styleHover="background-image:url('/img/product-8.jpg');")
            //- Information
            aside.content.content_secondary.container
                .content__inside
                    .row 
                        .col-6
                            .form-block
                                p.h4.mb-1 Персональные скидки и новости
                                p.text-grey.mb-2 Facilisis nunc proin sapien, dictum quam ornare orci dolor viverra pellentesque
                                form.form(action="")
                                    .form__col
                                        +radio('radio1', 'Получать все новости SANKOM','news')
                                    .form__col
                                        +radio('radio2', 'Акции и скидки','news')
                                    .form__col
                                        +radio('radio3', 'Персональные предложения','news')
                                    .form__line.mt-2
                                        +input('', 'E-mail')(label="input__label_inside bg-white" class="input_label-inside")
                                        +btn('', 'Подписаться')(class="btn_action btn_icon-check")
                        .col-6
                            a.faq.faq_link.bg-white(href="text.html")
                                .faq__title.faq__title--has-icon О бренде SANKOM, материалах и технологиях производства
                                    img.faq__icon(src='/icon/faq.svg')
                            a.faq.faq_link.bg-white(href="text.html")
                                .faq__title.faq__title--has-icon Подробнее о программе лояльности
                                    img.faq__icon(src='/icon/faq.svg')
                            a.faq.faq_link.bg-white(href="text.html")
                                .faq__title.faq__title--has-icon О бренде SANKOM, материалах и технологиях производства
                                    img.faq__icon(src='/icon/faq.svg')
                            a.faq.faq_link.bg-white(href="text.html")
                                .faq__title.faq__title--has-icon Подробнее о программе лояльности
                                    img.faq__icon(src='/icon/faq.svg')
            include component/banner/delivery.pug
        include component/footer/footer.pug
        
        script(src="./js/jquery.inputmask.min.js")

        link(href='./css/jquery.fancybox.min.css', rel='stylesheet')
        script(src="./js/jquery.fancybox.min.js")

        script(src="./js/app.min.js")