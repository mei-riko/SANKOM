    body
        script(src="./js/jquery.min.js")
        include component/mixin.pug
        include component/header/header.pug
        include component/navigation/navbar.pug
        main
            //- Blog
            section.content.container
                .content__inside
                    ul.breadcrumb
                        li.breadcrumb__item 
                            a.breadcrumb__link(href="index.html") Главная
                        li.breadcrumb__item.breadcrumb__item--active Блог
                    .row.mt-2
                        .col-2.col-xl-3.col-lg-4.col-md-12.mb-md-2.mb-xs-1
                            //- Category Links
                            .filter-nav.filter-nav_toggle.mb-2.mb-md-1
                                .filter-nav__parent.filter-nav_toggle__parent Категории
                                .filter-nav__children.filter-nav_toggle__children
                                    a.filter-nav__link(href="#") Обзоры
                                    a.filter-nav__link(href="#") Видео
                                    a.filter-nav__link(href="#") Статьи
                                    a.filter-nav__link(href="#") Фотографии
                            .filter-row.mb-1
                                .filter-row__title Параметр фильтрации
                                .filter-row__content 
                                    .checkbox
                                        input.checkbox__input#param1(type="checkbox" name="type" checked="checked")
                                        label.checkbox__label(for="param1") Параметр 1
                                    .checkbox.mt-1
                                        input.checkbox__input#param2(type="checkbox" name="type")
                                        label.checkbox__label(for="param2") Параметр 2
                                    .checkbox.checkbox--disabled.mt-1
                                        input.checkbox__input#param3(type="checkbox" name="type" disabled="disabled")
                                        label.checkbox__label(for="param3") Параметр 3
                            .filter-row.mb-1
                                .filter-row__title Параметр фильтрации
                                .filter-row__content 
                                    .radio
                                        input.radio__input#test1(type="radio" name="test" checked="checked")
                                        label.radio__label(for="test1") Параметр 1
                                    .radio.mt-1
                                        input.radio__input#test2(type="radio" name="test" checked="checked")
                                        label.radio__label(for="test2") Параметр 2
                                    .radio.checkbox--disabled.mt-1
                                        input.radio__input#test3(type="radio" name="test" checked="checked")
                                        label.radio__label(for="test3") Параметр 3
                            .filter-row.filter-row--active.mb-1
                                .filter-row__title.filter-row__title--active Параметр фильтрации
                                .filter-row__content(style="display: block;")
                                    .checkbox
                                        input.checkbox__input#param11(type="checkbox" name="type" checked="checked")
                                        label.checkbox__label(for="param11") Параметр 1
                                    .checkbox.mt-1
                                        input.checkbox__input#param12(type="checkbox" name="type")
                                        label.checkbox__label(for="param12") Параметр 2
                                    .checkbox.checkbox--disabled.mt-1
                                        input.checkbox__input#param13(type="checkbox" name="type" disabled="disabled")
                                        label.checkbox__label(for="param13") Параметр 3
                        .col-10.col-xl-9.col-lg-8.col-md-12
                            h1.heading-covered.text-covered Blog Sankom
                            //- h1.h3 Блог: обзоры, статьи и отзывы о&nbsp;товарах
                            .row.mt-2.mt-md-3
                                .col-4.col-xl-6.col-sm-12.mb-3
                                    +blogCol("Позы йоги для снятия напряжения позвоночника", "Aliquam, porttitor tortor neque diam quam nulla massa tellus pretium quam mauris magna senectus", "blog-inside.html")(dataSrc="./img/image-1.jpg")
                                        //- span.tags__link.tags__link_disabled Шорты Long Shaper АЛОЭ
                                        //- span.tags__link.tags__link_disabled Леггинсы LIGHT BLUE JEANS
                                .col-4.col-xl-6.col-sm-12.mb-3
                                    +blogCol("Потрясающий эффект коррекции майки SANKOM", "", "blog-inside.html")(dataSrc="./img/image-2.jpg")
                                        //- span.tags__link.tags__link_disabled Шорты Long Shaper АЛОЭ
                                        //- span.tags__link.tags__link_disabled Леггинсы LIGHT BLUE JEANS
                                .col-4.col-xl-6.col-sm-12.mb-3
                                    +blogCol("Фотоссесия моделей Plus Size", "Aliquam, porttitor tortor neque diam quam nulla massa tellus pretium quam mauris magna senectus", "blog-inside.html")(dataSrc="./img/image-3.jpg")
                                        //- span.tags__link.tags__link_disabled Шорты Long Shaper АЛОЭ
                                        //- span.tags__link.tags__link_disabled Шорты Long Shaper COOLING
                                        //- span.tags__link.tags__link_disabled Майка VEST BODY SHAPER
                                        //- span.tags__link.tags__link_disabled Шорты Long Shaper БАМБУК
                                        //- span.tags__link.tags__link_disabled Трусы Briefs Shaper COOLING
                                .col-4.col-xl-6.col-sm-12.mb-3
                                    +blogCol("Позы йоги для снятия напряжения позвоночника", "Aliquam, porttitor tortor neque diam quam nulla massa tellus pretium quam mauris magna senectus", "blog-inside.html")(dataSrc="./img/image-4.jpg")
                                        //- span.tags__link.tags__link_disabled Шорты Long Shaper АЛОЭ
                                        //- span.tags__link.tags__link_disabled Леггинсы LIGHT BLUE JEANS
                                                        .tags-row
                            .pagination
                                a.pagination__link.pagination__link_prev(href="#") &nbsp;
                                a.pagination__link(href="#") 1
                                a.pagination__link(href="#") 2
                                a.pagination__link.pagination__link--active(href="#") 3
                                a.pagination__link(href="#") 4
                                a.pagination__link.pagination__link_next(href="#") &nbsp;
                            .tags-row.mt-2
                                .tags-row__title Теги публикаций
                                .tags-row__items 
                                    a.tags-row__link(href="catalog.html") После кесарева
