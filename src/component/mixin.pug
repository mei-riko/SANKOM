//- Framework Elements
mixin btn(href, title)
    a.btn(class!=attributes.class href=href)= title
mixin input(placeholder, label)
    .input(class!=attributes.class)
        label.input__label= label
        input.input__field(placeholder=placeholder type!=attributes.type)
mixin textarea(placeholder, label)
    .input.input_textarea(class!=attributes.class)
        label.input__label= label
        textarea.input__field.input__field_textarea(placeholder=placeholder)
//- Preview Items
mixin category(title, intro, link, href)
    .preview.preview_category
        a.preview__image.preview_category__image(style!=attributes.style href=href title=title)
        p.preview__title.preview_category__title!= title
        p.preview__intro!= intro
        a.preview__link(href=href)= link
mixin subcategory(title, intro, href)
    .preview.preview_subcategory
        a.preview__image.preview_subcategory__image(style!=attributes.style href=href title=title)
        a.preview__title.preview_subcategory__title(href=href title=title)!= title
        p.preview__intro!= intro
mixin promo(title, href)
    a.preview.preview_promo(href=href title=title)
        .preview__image.preview_promo__image(style!=attributes.style)
        p.preview__title.preview_promo__title!= title
mixin categoryTags(title, href)
    a.preview.preview_categoryTags(href=href title=title)
        .preview__image.preview_categoryTags__image(style!=attributes.style)
        p.preview__title.preview_categoryTags__title!= title
mixin blog(tag, title, intro, href)
    .preview.preview_blog
        a.preview__image.preview_blog__image(style!=attributes.style href=href)
        .preview_blog__content
            p.preview__tag= tag
            a.preview__title.preview_category__title(href=href title=title)!= title
            p.preview__intro!= intro
//- Items
mixin faq(title, icon)
    .faq
        .faq__title.faq__title--has-icon!= title
            img.faq__icon(src=icon)
        .faq__content
            if block
                block
            else
                p No content provided
mixin banner(title, intro, link, href)
    .banner(style!=attributes.style class!=attributes.class)
        p.banner__title= title
        p.banner__intro= intro
        if block
            .banner__content
                block
        if link!=''
            .mt-3
                a.btn.btn_secondary(href=href)= link
//- Products
mixin product(title, newPrice, oldPrice, status, label, href)
    .product
        a.product__image(style!=attributes.style href=href title=title)
            if status!=''
                .product__status= status
        a.product__title(href=href title=title)= title
        if oldPrice!=''
            .product__price_old= oldPrice
            .product__price_new= newPrice
        else
            .product__price_new.product__price_single= newPrice
        .product__label!= label
mixin productSmall(title, newPrice, oldPrice, status, href)
    .product.product_small
        a.product__image.product_small__image(style!=attributes.style href=href title=title)
        .product_small__content
            if status!=''
                .product__status= status
            a.product__title(href=href title=title)= title
            if oldPrice!=''
                .product__price_old= oldPrice
                .product__price_new= newPrice
            else
                .product__price_new.product__price_single= newPrice
mixin productCard(title, newPrice, oldPrice, size, color, article, href)
    .product.product_card
        a.product__image.product_card__image(style!=attributes.style href=href title=title)
        .product_card__body
            .product_card__content
                a.product__title(href=href title=title)= title
                ul.product__options
                    li.product__options-item= color
                    li.product__options-item= size
                    li.product__options-item= article
            .product_card__price
                if oldPrice!=''
                    .product__price_old= oldPrice
                    .product__price_new= newPrice
                else
                    .product__price_new.product__price_single= newPrice
            .product_card__input
                input.input__field.input__field_number(placeholder=placeholder type="number" value="1")
