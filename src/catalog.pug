html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")

        title Catalog

        link(rel="preconnect" href="https://fonts.gstatic.com")
        link(href="https://fonts.googleapis.com/css2?family=Covered+By+Your+Grace&display=swap" rel="stylesheet")

        link(href='./css/framework.css', rel='stylesheet')
        link(href='./css/styles.css', rel='stylesheet')
        
    body
        script(src="./js/jquery.min.js")
        include component/mixin.pug
        include component/header/header.pug
        include component/navigation/navbar.pug
        main
            section.content.content_category-slider.container
                .content__inside
                    .slider-container
                        .slider.slider_subcategory.slider_subcategory-catalog.owl-carousel.owl-theme
                            .slider__item
                                +subcategory('Бюстгальтеры', 'gravida odio tellus', 'category.html')(dataSrc="./img/image-1.jpg")
                            .slider__item
                                +subcategory('Трусы', 'gravida odio tellus', 'category.html')(dataSrc="./img/image-2.jpg")
                            .slider__item
                                +subcategory('Шорты', 'gravida odio tellus', 'category.html')(dataSrc="./img/image-3.jpg")
                            .slider__item
                                +subcategory('Леггинсы', 'gravida odio tellus', 'category.html')(dataSrc="./img/image-4.jpg")
                            .slider__item
                                +subcategory('Майки', 'gravida odio tellus', 'category.html')(dataSrc="./img/bg-women.jpg")
                            .slider__item
                                +subcategory('Носки', 'gravida odio tellus', 'category.html')(dataSrc="./img/bg-sales.jpg")
                            .slider__item
                                +subcategory('Мужское', 'gravida odio tellus', 'category.html')(dataSrc="./img/bg-men.jpg")
            section.content.content_category-filter.container
                .content__inside
                    include component/filters/filters.pug
                    p.content__category-title.text-center.text-sm-left.mt-3.mt-xs-2.mb-2.mb-md-1.mb-sm-0 Каталог товаров
                    .row
                        .col-3.col-lg-4.col-md-6.mt-2
                            +product('Shaper Classic Peach', '6 999 руб.', '8 999 руб.', 'Sale', '', 'product.html')(dataSrc="./product/prod-1.jpg" dataSrcHover="./product/prod-0.jpg")
                        .col-3.col-lg-4.col-md-6.mt-2
                            +product('Shaper Bamboo', '2 459 руб.', '', '', 'ожидаем поступления на&nbsp;склад', 'product.html')(dataSrc="./product/prod-2.jpg" dataSrcHover="./product/prod-0.jpg")
                        .col-3.col-lg-4.col-md-6.mt-2
                            +product('Shaper Classic Peach', '6 999 руб.', '8 999 руб.', 'New+Promo', '', 'product.html')(dataSrc="./product/prod-3.jpg" dataSrcHover="./product/prod-0.jpg")
                        .col-3.col-lg-4.col-md-6.mt-2
                            +product('Shaper Bamboo', '2 459 руб.', '', '', '', 'product.html')(dataSrc="./product/prod-1.jpg" dataSrcHover="./product/prod-0.jpg")
                        .col-3.col-lg-4.col-md-6.mt-2
                            +product('Shaper Classic Peach', '6 999 руб.', '8 999 руб.', 'Sale', '', 'product.html')(dataSrc="./product/prod-2.jpg" dataSrcHover="./product/prod-0.jpg")
                        .col-3.col-lg-4.col-md-6.mt-2
                            +product('Shaper Bamboo', '2 459 руб.', '', '', '', 'product.html')(dataSrc="./product/prod-3.jpg" dataSrcHover="./product/prod-0.jpg")
            //- Information
            aside.content.content_secondary.container
                .content__inside
                    .row.mt-2.mb-2
                        .col-6.col-lg-12
                            include component/form/form-block.pug
                        .col-6.col-lg-12.mt-lg-2
                            +faq('О бренде SANKOM, материалах и технологиях производства', './icon/faq.svg', 'faq.html')(class="bg-white mb-1")
                            +faq('Подробнее о программе лояльности', './icon/faq.svg', 'faq.html')(class="bg-white mb-1")
                            +faq('Узнать о способах доставки, оплаты и возврата', './icon/faq.svg', 'faq.html')(class="bg-white mb-1")
                            +faq('Таблицы размеров', './icon/faq.svg', 'faq.html')(class="bg-white")
            include component/banner/delivery.pug
        include component/footer/footer.pug
        include component/sidebar/sidebar.pug
        script(src="./js/jquery.inputmask.min.js")

        link(href='./css/jquery.fancybox.min.css', rel='stylesheet')
        script(src="./js/jquery.fancybox.min.js")

        link(href='./css/owl.carousel.min.css', rel='stylesheet')
        link(href='./css/owl.theme.default.min.css', rel='stylesheet')
        script(src="./js/owl.carousel.min.js")

        script(src="./js/blazy.min.js")

        script(src="./js/app.min.js")