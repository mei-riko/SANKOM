html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")

        title Catalog

        link(rel="preconnect" href="https://fonts.gstatic.com")
        link(href="https://fonts.googleapis.com/css2?family=Covered+By+Your+Grace&display=swap" rel="stylesheet")

        link(href='/css/framework.css', rel='stylesheet')

        link(href='/css/sliders.css', rel='stylesheet')
        link(href='/css/previews.css', rel='stylesheet')
        link(href='/css/filters.css', rel='stylesheet')
        link(href='/css/product-preview.css', rel='stylesheet')
        link(href='/css/faq.css', rel='stylesheet')

    body
        script(src="/js/jquery.min.js")
        include component/mixin.pug
        include component/header/header.pug
        main.mt-3
            section.content.content_category-slider.container
                .content__inside
                    .slider-container
                        .slider.slider_subcategory.slider_subcategory-catalog.owl-carousel.owl-theme
                            .slider__item
                                +subcategory('Бюстгальтеры', 'gravida odio tellus', 'category.html')(dataSrc="/img/image-1.jpg")
                            .slider__item
                                +subcategory('Трусы', 'gravida odio tellus', 'category.html')(dataSrc="/img/image-2.jpg")
                            .slider__item
                                +subcategory('Шорты', 'gravida odio tellus', 'category.html')(dataSrc="/img/image-3.jpg")
                            .slider__item
                                +subcategory('Леггинсы', 'gravida odio tellus', 'category.html')(dataSrc="/img/image-4.jpg")
                            .slider__item
                                +subcategory('Майки', 'gravida odio tellus', 'category.html')(dataSrc="/img/bg-women.jpg")
                            .slider__item
                                +subcategory('Носки', 'gravida odio tellus', 'category.html')(dataSrc="/img/bg-sales.jpg")
                            .slider__item
                                +subcategory('Мужское', 'gravida odio tellus', 'category.html')(dataSrc="/img/bg-men.jpg")
            section.content.content_category-filter.container
                .content__inside
                    include component/filters/filters.pug
                    p.content__category-title.text-center.mt-4.mb-2 Каталог товаров
                    .row
                        .col-3.mt-2
                            +product('Shaper Classic Peach', '6 999 руб.', '8 999 руб.', 'Sale', '', 'product.html')(dataSrc="/img/product-9.jpg" dataSrcHover="/img/product-6.jpg")
                        .col-3.mt-2
                            +product('Shaper Bamboo', '2 459 руб.', '', '', 'ожидаем поступления на склад', 'product.html')(dataSrc="/img/product-7.jpg" dataSrcHover="/img/product-8.jpg")
                        .col-3.mt-2
                            +product('Shaper Classic Peach', '6 999 руб.', '8 999 руб.', 'New+Promo', '', 'product.html')(dataSrc="/img/product-1.jpg" dataSrcHover="/img/product-6.jpg")
                        .col-3.mt-2
                            +product('Shaper Bamboo', '2 459 руб.', '', '', '', 'product.html')(dataSrc="/img/product-2.jpg" dataSrcHover="/img/product-7.jpg")
                        .col-3.mt-2
                            +product('Shaper Classic Peach', '6 999 руб.', '8 999 руб.', 'Sale', '', 'product.html')(dataSrc="/img/product-9.jpg" dataSrcHover="/img/product-6.jpg")
                        .col-3.mt-2
                            +product('Shaper Bamboo', '2 459 руб.', '', '', '', 'product.html')(dataSrc="/img/product-7.jpg" dataSrcHover="/img/product-8.jpg")
            //- Information
            aside.content.content_secondary.container
                .content__inside
                    .row 
                        .col-6
                            .form-block
                                p.h4.mb-1 Персональные скидки и новости
                                p.text-grey.mb-2 Facilisis nunc proin sapien, dictum quam ornare orci dolor viverra pellentesque
                                form.form(action="")
                                    .form__col
                                        +radio('radio1', 'Получать все новости SANKOM','news','checked')
                                    .form__col
                                        +radio('radio2', 'Акции и скидки','news')
                                    .form__col
                                        +radio('radio3', 'Персональные предложения','news')
                                    .form__line.mt-2
                                        +input('', 'E-mail')(class="input_label-inside form__line-input" label="input__label_inside bg-white" field="form__line-field" )
                                        +btn('', 'Подписаться')(class="btn_action btn_icon-check")
                        .col-6
                            a.faq.faq_link.bg-white(href="text.html")
                                .faq__title.faq__title_has-icon О бренде SANKOM, материалах и технологиях производства
                                    img.faq__icon(src='/icon/faq.svg')
                            a.faq.faq_link.bg-white(href="text.html")
                                .faq__title.faq__title_has-icon Подробнее о программе лояльности
                                    img.faq__icon(src='/icon/faq.svg')
                            a.faq.faq_link.bg-white(href="text.html")
                                .faq__title.faq__title_has-icon О бренде SANKOM, материалах и технологиях производства
                                    img.faq__icon(src='/icon/faq.svg')
                            a.faq.faq_link.bg-white(href="text.html")
                                .faq__title.faq__title_has-icon Подробнее о программе лояльности
                                    img.faq__icon(src='/icon/faq.svg')
            include component/banner/delivery.pug
        include component/footer/footer.pug
        
        script(src="./js/jquery.inputmask.min.js")

        link(href='./css/jquery.fancybox.min.css', rel='stylesheet')
        script(src="./js/jquery.fancybox.min.js")

        link(href='./css/owl.carousel.min.css', rel='stylesheet')
        link(href='./css/owl.theme.default.min.css', rel='stylesheet')
        script(src="./js/owl.carousel.min.js")

        script(src="./js/blazy.min.js")

        script(src="./js/app.min.js")